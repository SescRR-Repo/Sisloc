@model Sisloc.ViewModels.MotoristaIndexViewModel

@{
    ViewData["Title"] = "Gestão de Motoristas";
}

<div class="container-fluid">

    <!-- Header -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <h2 class="fw-bold text-primary mb-0">
                    <i class="fas fa-user-tie me-2"></i>
                    Gestão de Motoristas
                </h2>
                <div>
                    <a asp-action="Create" class="btn btn-success">
                        <i class="fas fa-plus me-2"></i>Novo Motorista
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- Alertas de Vencimento -->
    @if (Model.TemAlertas)
    {
        <div class="row mb-4">
            <div class="col-12">
                <div class="alert alert-warning alert-dismissible fade show" role="alert">
                    <h6><i class="fas fa-exclamation-triangle me-2"></i>Alertas de Documentação</h6>
                    <div class="row">
                        @if (Model.AlertasVencimento!.DocumentacaoVencida > 0)
                        {
                            <div class="col-md-4">
                                <strong class="text-danger">@Model.AlertasVencimento.DocumentacaoVencida</strong> motorista(s) com documentação <strong>vencida</strong>
                            </div>
                        }
                        @if (Model.AlertasVencimento!.CnhVencendoEm30Dias > 0)
                        {
                            <div class="col-md-4">
                                <strong class="text-warning">@Model.AlertasVencimento.CnhVencendoEm30Dias</strong> CNH(s) vencem em <strong>30 dias</strong>
                            </div>
                        }
                        @if (Model.AlertasVencimento!.ExameToxicologicoVencendoEm60Dias > 0)
                        {
                            <div class="col-md-4">
                                <strong class="text-warning">@Model.AlertasVencimento.ExameToxicologicoVencendoEm60Dias</strong> exame(s) toxicológico(s) vencem em <strong>60 dias</strong>
                            </div>
                        }
                    </div>
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            </div>
        </div>
    }

    <!-- Estatísticas -->
    @if (Model.Estatisticas != null)
    {
        <div class="row g-3 mb-4">
            <div class="col-xl-2 col-md-4 col-sm-6">
                <div class="card border-0 shadow-sm h-100 bg-primary bg-opacity-10">
                    <div class="card-body text-center">
                        <i class="fas fa-user-tie fa-2x text-primary mb-2"></i>
                        <h4 class="mb-1">@Model.Estatisticas.TotalMotoristas</h4>
                        <small class="text-muted">Total</small>
                    </div>
                </div>
            </div>

            <div class="col-xl-2 col-md-4 col-sm-6">
                <div class="card border-0 shadow-sm h-100 bg-success bg-opacity-10">
                    <div class="card-body text-center">
                        <i class="fas fa-check-circle fa-2x text-success mb-2"></i>
                        <h4 class="mb-1">@Model.Estatisticas.TotalDisponiveis</h4>
                        <small class="text-muted">Disponíveis</small>
                    </div>
                </div>
            </div>

            <div class="col-xl-2 col-md-4 col-sm-6">
                <div class="card border-0 shadow-sm h-100 bg-info bg-opacity-10">
                    <div class="card-body text-center">
                        <i class="fas fa-car fa-2x text-info mb-2"></i>
                        <h4 class="mb-1">@Model.Estatisticas.TotalOcupados</h4>
                        <small class="text-muted">Ocupados</small>
                    </div>
                </div>
            </div>

            <div class="col-xl-2 col-md-4 col-sm-6">
                <div class="card border-0 shadow-sm h-100 bg-secondary bg-opacity-10">
                    <div class="card-body text-center">
                        <i class="fas fa-coffee fa-2x text-secondary mb-2"></i>
                        <h4 class="mb-1">@Model.Estatisticas.TotalFolga</h4>
                        <small class="text-muted">Folga</small>
                    </div>
                </div>
            </div>

            <div class="col-xl-2 col-md-4 col-sm-6">
                <div class="card border-0 shadow-sm h-100 bg-danger bg-opacity-10">
                    <div class="card-body text-center">
                        <i class="fas fa-exclamation-triangle fa-2x text-danger mb-2"></i>
                        <h4 class="mb-1">@Model.Estatisticas.TotalIrregulares</h4>
                        <small class="text-muted">Irregulares</small>
                    </div>
                </div>
            </div>

            <div class="col-xl-2 col-md-4 col-sm-6">
                <div class="card border-0 shadow-sm h-100 bg-warning bg-opacity-10">
                    <div class="card-body text-center">
                        <i class="fas fa-clock fa-2x text-warning mb-2"></i>
                        <h4 class="mb-1">@Model.Estatisticas.ComAlertaVencimento</h4>
                        <small class="text-muted">Com Alerta</small>
                    </div>
                </div>
            </div>
        </div>
    }

    <!-- Filtros -->
    <div class="card shadow-sm mb-4">
        <div class="card-header">
            <h5 class="mb-0">
                <i class="fas fa-filter me-2"></i>
                Filtros
            </h5>
        </div>
        <div class="card-body">
            <form method="get" asp-action="Index">
                <div class="row g-3">
                    <div class="col-md-3">
                        <label for="filtroTexto" class="form-label">Buscar</label>
                        <input type="text" name="filtroTexto" class="form-control"
                               value="@Model.FiltroTexto" placeholder="Nome, CNH ou telefone...">
                    </div>
                    <div class="col-md-2">
                        <label for="categoriaCnh" class="form-label">Categoria CNH</label>
                        <select name="categoriaCnh" class="form-select" asp-items="ViewBag.CategoriasCnh">
                            <option value="">Todas</option>
                        </select>
                    </div>
                    <div class="col-md-2">
                        <label for="status" class="form-label">Status</label>
                        <select name="status" class="form-select" asp-items="ViewBag.StatusList">
                            <option value="">Todos</option>
                        </select>
                    </div>
                    <div class="col-md-3">
                        <label for="documentacaoVencida" class="form-label">Documentação</label>
                        <select name="documentacaoVencida" class="form-select">
                            <option value="">Todas</option>
                            <option value="false" selected="@(Model.DocumentacaoVencidaFiltro == false)">Documentação OK</option>
                            <option value="true" selected="@(Model.DocumentacaoVencidaFiltro == true)">Com Vencimento</option>
                        </select>
                    </div>
                    <div class="col-md-2">
                        <label class="form-label">&nbsp;</label>
                        <div class="d-grid">
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-search me-1"></i>Filtrar
                            </button>
                        </div>
                    </div>
                </div>
                <div class="row mt-2">
                    <div class="col-12">
                        <a href="@Url.Action("Index")" class="btn btn-outline-secondary btn-sm">
                            <i class="fas fa-times me-1"></i>Limpar Filtros
                        </a>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <!-- Tabela de Motoristas -->
    <div class="card shadow-sm">
        <div class="card-header d-flex justify-content-between align-items-center">
            <h5 class="mb-0">
                <i class="fas fa-list me-2"></i>
                Motoristas (@Model.Motoristas.Count() de @(Model.Motoristas.TotalPages * Model.ItensPorPagina) registros)
            </h5>
            <div>
                <a asp-action="RelatorioDocumentacao" class="btn btn-sm btn-outline-info">
                    <i class="fas fa-file-alt me-1"></i>Relatório
                </a>
            </div>
        </div>
        <div class="card-body p-0">
            @if (Model.Motoristas.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead class="table-light">
                            <tr>
                                <th>Nome</th>
                                <th>CNH</th>
                                <th>Categoria</th>
                                <th>Telefone</th>
                                <th>Status</th>
                                <th>Documentação</th>
                                <th class="text-center">Ações</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var motorista in Model.Motoristas)
                            {
                                @{
                                    var cnhVenceEm = (motorista.VencimentoCnh - DateTime.Now).Days;
                                    var exameToxVenceEm = (motorista.DataExameToxicologico.AddYears(2) - DateTime.Now).Days;
                                    var statusDoc = "OK";
                                    var classeDoc = "success";

                                    if (cnhVenceEm < 0 || exameToxVenceEm < 0)
                                    {
                                        statusDoc = "Vencida";
                                        classeDoc = "danger";
                                    }
                                    else if (cnhVenceEm <= 30 || exameToxVenceEm <= 60)
                                    {
                                        statusDoc = "Alerta";
                                        classeDoc = "warning";
                                    }

                                    var statusClass = motorista.Status switch
                                    {
                                        Sisloc.Models.Enums.StatusMotorista.Disponivel => "success",
                                        Sisloc.Models.Enums.StatusMotorista.Ocupado => "primary",
                                        Sisloc.Models.Enums.StatusMotorista.Folga => "secondary",
                                        Sisloc.Models.Enums.StatusMotorista.Irregular => "danger",
                                        _ => "secondary"
                                    };
                                }

                                <tr>
                                    <td>
                                        <div class="fw-bold">@motorista.NomeCompleto</div>
                                    </td>
                                    <td>
                                        <span class="protocol-display small">@motorista.NumeroCnh</span>
                                        <br>
                                        <small class="text-muted">Vence: @motorista.VencimentoCnh.ToString("dd/MM/yyyy")</small>
                                    </td>
                                    <td>
                                        <span class="badge bg-light text-dark">@motorista.CategoriaCnh</span>
                                    </td>
                                    <td>@motorista.Telefone</td>
                                    <td>
                                        <span class="badge bg-@statusClass status-badge">
                                            @motorista.Status.ToString()
                                        </span>
                                    </td>
                                    <td>
                                        <span class="badge bg-@classeDoc">@statusDoc</span>
                                        @if (cnhVenceEm <= 30 && cnhVenceEm >= 0)
                                        {
                                            <br><small class="text-warning">CNH: @cnhVenceEm dias</small>
                                        }
                                        @if (exameToxVenceEm <= 60 && exameToxVenceEm >= 0)
                                        {
                                            <br><small class="text-warning">Exame: @exameToxVenceEm dias</small>
                                        }
                                    </td>
                                    <td class="text-center">
                                        <div class="btn-group btn-group-sm" role="group">
                                            <a asp-action="Details" asp-route-id="@motorista.Id"
                                               class="btn btn-outline-primary" title="Ver detalhes">
                                                <i class="fas fa-eye"></i>
                                            </a>
                                            <a asp-action="Edit" asp-route-id="@motorista.Id"
                                               class="btn btn-outline-warning" title="Editar">
                                                <i class="fas fa-edit"></i>
                                            </a>
                                            <a asp-action="Delete" asp-route-id="@motorista.Id"
                                               class="btn btn-outline-danger" title="Remover">
                                                <i class="fas fa-trash"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

                <!-- Paginação -->
                @if (Model.Motoristas.TotalPages > 1)
                {
                    <div class="card-footer">
                        <nav aria-label="Paginação de motoristas">
                            <ul class="pagination justify-content-center mb-0">
                                <!-- Primeira página -->
                                <li class="page-item @(!Model.Motoristas.HasPreviousPage ? "disabled" : "")">
                                    <a class="page-link" href="@Url.Action("Index")@Model.ObterUrlComFiltros(1)">
                                        <i class="fas fa-angle-double-left"></i>
                                    </a>
                                </li>

                                <!-- Página anterior -->
                                <li class="page-item @(!Model.Motoristas.HasPreviousPage ? "disabled" : "")">
                                    <a class="page-link" href="@Url.Action("Index")@Model.ObterUrlComFiltros(Model.Motoristas.PageIndex - 1)">
                                        <i class="fas fa-angle-left"></i>
                                    </a>
                                </li>

                                <!-- Páginas -->
                                @for (int i = Math.Max(1, Model.Motoristas.PageIndex - 2);
                               i <= Math.Min(Model.Motoristas.TotalPages, Model.Motoristas.PageIndex + 2);
                               i++)
                                {
                                    <li class="page-item @(i == Model.Motoristas.PageIndex ? "active" : "")">
                                        <a class="page-link" href="@Url.Action("Index")@Model.ObterUrlComFiltros(i)">@i</a>
                                    </li>
                                }

                                <!-- Próxima página -->
                                <li class="page-item @(!Model.Motoristas.HasNextPage ? "disabled" : "")">
                                    <a class="page-link" href="@Url.Action("Index")@Model.ObterUrlComFiltros(Model.Motoristas.PageIndex + 1)">
                                        <i class="fas fa-angle-right"></i>
                                    </a>
                                </li>

                                <!-- Última página -->
                                <li class="page-item @(!Model.Motoristas.HasNextPage ? "disabled" : "")">
                                    <a class="page-link" href="@Url.Action("Index")@Model.ObterUrlComFiltros(Model.Motoristas.TotalPages)">
                                        <i class="fas fa-angle-double-right"></i>
                                    </a>
                                </li>
                            </ul>
                        </nav>

                        <div class="text-center mt-2">
                            <small class="text-muted">
                                Página @Model.Motoristas.PageIndex de @Model.Motoristas.TotalPages
                            </small>
                        </div>
                    </div>
                }
            }
            else
            {
                <div class="text-center py-5">
                    <i class="fas fa-user-tie fa-3x text-muted mb-3"></i>
                    <h5 class="text-muted">Nenhum motorista encontrado</h5>
                    <p class="text-muted">Não há motoristas que correspondam aos filtros aplicados.</p>
                    <a asp-action="Create" class="btn btn-primary">
                        <i class="fas fa-plus me-2"></i>Cadastrar Primeiro Motorista
                    </a>
                </div>
            }
        </div>
    </div>

</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            // Tooltips
            $('[title]').tooltip();

            // Auto-submit do filtro após mudança
            $('select[name="categoriaCnh"], select[name="status"], select[name="documentacaoVencida"]').on('change', function() {
                $(this).closest('form').submit();
            });

            // Confirmar remoção
            $('a[href*="/Delete"]').on('click', function(e) {
                if (!confirm('Tem certeza que deseja remover este motorista?')) {
                    e.preventDefault();
                }
            });
        });
    </script>
}