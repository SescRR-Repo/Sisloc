@model Sisloc.ViewModels.VeiculoDetailsViewModel

@{
    ViewData["Title"] = $"Veículo {Model.Veiculo.Placa}";

    string GetStatusClass(Sisloc.Models.Enums.StatusVeiculo status)
    {
        return status switch
        {
            Sisloc.Models.Enums.StatusVeiculo.Disponivel => "success",
            Sisloc.Models.Enums.StatusVeiculo.Reservado => "warning",
            Sisloc.Models.Enums.StatusVeiculo.EmUso => "primary",
            Sisloc.Models.Enums.StatusVeiculo.Manutencao => "danger",
            _ => "secondary"
        };
    }

    string GetAgendamentoStatusClass(Sisloc.Models.Enums.StatusAgendamento status)
    {
        return status switch
        {
            Sisloc.Models.Enums.StatusAgendamento.Pendente => "warning",
            Sisloc.Models.Enums.StatusAgendamento.Aprovado => "success",
            Sisloc.Models.Enums.StatusAgendamento.Rejeitado => "danger",
            Sisloc.Models.Enums.StatusAgendamento.EmAndamento => "primary",
            Sisloc.Models.Enums.StatusAgendamento.Concluido => "secondary",
            Sisloc.Models.Enums.StatusAgendamento.Cancelado => "dark",
            _ => "secondary"
        };
    }
}

<div class="container-fluid">

    <!-- Header -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h2 class="fw-bold text-primary mb-1">
                        <i class="fas fa-car me-2"></i>
                        @Model.Veiculo.Modelo
                    </h2>
                    <p class="text-muted mb-0">
                        Placa: <span class="protocol-display">@Model.Veiculo.Placa</span>
                    </p>
                </div>
                <div>
                    <span class="badge bg-@GetStatusClass(Model.Veiculo.Status) status-badge fs-6">
                        @Model.Veiculo.Status.ToString()
                    </span>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <!-- Coluna Principal - Informações do Veículo -->
        <div class="col-lg-8">

            <!-- Informações Básicas -->
            <div class="card shadow-sm mb-4">
                <div class="card-header">
                    <h5 class="mb-0">
                        <i class="fas fa-info-circle me-2"></i>
                        Informações do Veículo
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <strong><i class="fas fa-id-card me-2 text-primary"></i>Placa:</strong><br>
                            <span class="ms-3 protocol-display">@Model.Veiculo.Placa</span>
                        </div>
                        <div class="col-md-6">
                            <strong><i class="fas fa-car me-2 text-primary"></i>Modelo:</strong><br>
                            <span class="ms-3">@Model.Veiculo.Modelo</span>
                        </div>
                        <div class="col-md-6 mt-3">
                            <strong><i class="fas fa-tags me-2 text-info"></i>Categoria:</strong><br>
                            <span class="ms-3 badge bg-primary">@Model.Veiculo.Categoria.ToString()</span>
                        </div>
                        <div class="col-md-6 mt-3">
                            <strong><i class="fas fa-users me-2 text-info"></i>Capacidade:</strong><br>
                            <span class="ms-3 fw-bold">@Model.Veiculo.CapacidadePassageiros passageiros</span>
                        </div>
                        <div class="col-md-6 mt-3">
                            <strong><i class="fas fa-circle me-2 text-@GetStatusClass(Model.Veiculo.Status)"></i>Status:</strong><br>
                            <span class="ms-3 badge bg-@GetStatusClass(Model.Veiculo.Status)">@Model.Veiculo.Status.ToString()</span>
                        </div>
                        <div class="col-md-6 mt-3">
                            <strong><i class="fas fa-clock me-2 text-secondary"></i>Próxima Disponibilidade:</strong><br>
                            <span class="ms-3">@Model.ProximaDisponibilidade</span>
                        </div>
                        @if (!string.IsNullOrEmpty(Model.Veiculo.Observacoes))
                        {
                            <div class="col-12 mt-3">
                                <strong><i class="fas fa-comment me-2 text-secondary"></i>Observações:</strong><br>
                                <div class="ms-3 border-start border-3 border-light ps-3">
                                    @Model.Veiculo.Observacoes
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>

            <!-- Estatísticas de Uso -->
            <div class="card shadow-sm mb-4">
                <div class="card-header">
                    <h5 class="mb-0">
                        <i class="fas fa-chart-bar me-2"></i>
                        Estatísticas de Uso
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row text-center">
                        <div class="col-md-3">
                            <div class="border rounded p-3">
                                <h4 class="text-primary mb-1">@Model.TotalAgendamentos</h4>
                                <small class="text-muted">Total de Agendamentos</small>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="border rounded p-3">
                                <h4 class="text-success mb-1">@Model.AgendamentosEsteAno</h4>
                                <small class="text-muted">Este Ano</small>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="border rounded p-3">
                                <h4 class="text-info mb-1">@Model.AgendamentosEsteMes</h4>
                                <small class="text-muted">Este Mês</small>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="border rounded p-3">
                                <h4 class="text-warning mb-1">@Model.AgendamentosAtivos.Count</h4>
                                <small class="text-muted">Ativos</small>
                            </div>
                        </div>
                    </div>
                    @if (Model.UltimaUtilizacao.HasValue)
                    {
                        <div class="row mt-3">
                            <div class="col-12">
                                <div class="alert alert-info mb-0">
                                    <i class="fas fa-clock me-2"></i>
                                    <strong>Última utilização:</strong> @Model.UltimaUtilizacao.Value.ToString("dd/MM/yyyy HH:mm")
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>

            <!-- Agendamentos Ativos -->
            @if (Model.AgendamentosAtivos.Any())
            {
                <div class="card shadow-sm mb-4">
                    <div class="card-header bg-warning text-white">
                        <h5 class="mb-0">
                            <i class="fas fa-calendar-check me-2"></i>
                            Agendamentos Ativos (@Model.AgendamentosAtivos.Count)
                        </h5>
                    </div>
                    <div class="card-body p-0">
                        <div class="table-responsive">
                            <table class="table table-sm mb-0">
                                <thead class="table-light">
                                    <tr>
                                        <th>Protocolo</th>
                                        <th>Solicitante</th>
                                        <th>Período</th>
                                        <th>Status</th>
                                        <th>Ações</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var agendamento in Model.AgendamentosAtivos.Take(5))
                                    {
                                        <tr>
                                            <td>
                                                <span class="protocol-display small">@agendamento.Protocolo</span>
                                            </td>
                                            <td>@agendamento.NomeSolicitante</td>
                                            <td>
                                                <small>
                                                    @agendamento.DataPartida.ToString("dd/MM HH:mm") -
                                                    @agendamento.DataChegada.ToString("dd/MM HH:mm")
                                                </small>
                                            </td>
                                            <td>
                                                <span class="badge bg-@GetAgendamentoStatusClass(agendamento.Status) badge-sm">
                                                    @agendamento.Status.ToString()
                                                </span>
                                            </td>
                                            <td>
                                                <a asp-controller="Admin" asp-action="Detalhes" asp-route-id="@agendamento.Id"
                                                   class="btn btn-outline-primary btn-sm" title="Ver detalhes">
                                                    <i class="fas fa-eye"></i>
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            }

            <!-- Histórico Recente -->
            @if (Model.HistoricoAgendamentos.Any())
            {
                <div class="card shadow-sm mb-4">
                    <div class="card-header">
                        <h5 class="mb-0">
                            <i class="fas fa-history me-2"></i>
                            Histórico Recente
                        </h5>
                    </div>
                    <div class="card-body p-0">
                        <div class="table-responsive">
                            <table class="table table-sm mb-0">
                                <thead class="table-light">
                                    <tr>
                                        <th>Data</th>
                                        <th>Solicitante</th>
                                        <th>Destino</th>
                                        <th>Status</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var agendamento in Model.HistoricoAgendamentos.Take(10))
                                    {
                                        <tr>
                                            <td>
                                                <small>@agendamento.DataPartida.ToString("dd/MM/yyyy")</small>
                                            </td>
                                            <td>@agendamento.NomeSolicitante</td>
                                            <td>
                                                <span class="text-truncate d-inline-block" style="max-width: 150px;" title="@agendamento.Destino">
                                                    @agendamento.Destino
                                                </span>
                                            </td>
                                            <td>
                                                <span class="badge bg-@GetAgendamentoStatusClass(agendamento.Status) badge-sm">
                                                    @agendamento.Status.ToString()
                                                </span>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            }

        </div>

        <!-- Coluna Lateral - Ações -->
        <div class="col-lg-4">

            <!-- Ações do Veículo -->
            <div class="card shadow-sm mb-4">
                <div class="card-header">
                    <h5 class="mb-0">
                        <i class="fas fa-cog me-2"></i>
                        Ações
                    </h5>
                </div>
                <div class="card-body">
                    <div class="d-grid gap-2">
                        @if (Model.PodeSerEditado)
                        {
                            <a asp-action="Edit" asp-route-id="@Model.Veiculo.Id"
                               class="btn btn-warning">
                                <i class="fas fa-edit me-2"></i>Editar Veículo
                            </a>
                        }
                        else
                        {
                            <button class="btn btn-warning" disabled title="Não pode ser editado com agendamentos ativos">
                                <i class="fas fa-edit me-2"></i>Editar Veículo
                            </button>
                        }

                        @if (Model.PodeSerRemovido)
                        {
                            <a asp-action="Delete" asp-route-id="@Model.Veiculo.Id"
                               class="btn btn-danger">
                                <i class="fas fa-trash me-2"></i>Remover Veículo
                            </a>
                        }
                        else
                        {
                            <button class="btn btn-danger" disabled title="Não pode ser removido com agendamentos ativos">
                                <i class="fas fa-trash me-2"></i>Remover Veículo
                            </button>
                        }

                        <hr>

                        <a asp-action="Index" class="btn btn-outline-primary">
                            <i class="fas fa-arrow-left me-2"></i>Voltar à Lista
                        </a>

                        <a asp-controller="Admin" asp-action="Index"
                           asp-route-categoria="@Model.Veiculo.Categoria"
                           class="btn btn-outline-secondary">
                            <i class="fas fa-calendar me-2"></i>Ver Agendamentos
                        </a>
                    </div>
                </div>
            </div>

            <!-- Status e Disponibilidade -->
            <div class="card shadow-sm mb-4">
                <div class="card-header">
                    <h6 class="mb-0">
                        <i class="fas fa-info-circle me-2"></i>
                        Status Atual
                    </h6>
                </div>
                <div class="card-body">
                    @if (Model.EstaDisponivel)
                    {
                        <div class="alert alert-success mb-0">
                            <i class="fas fa-check-circle me-2"></i>
                            <strong>Disponível</strong><br>
                            <small>Este veículo está disponível para agendamentos.</small>
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-warning mb-0">
                            <i class="fas fa-exclamation-triangle me-2"></i>
                            <strong>@Model.Veiculo.Status.ToString()</strong><br>
                            <small>Próxima disponibilidade: @Model.ProximaDisponibilidade</small>
                        </div>
                    }
                </div>
            </div>

            <!-- Informações do Sistema -->
            <div class="card shadow-sm">
                <div class="card-header">
                    <h6 class="mb-0">
                        <i class="fas fa-database me-2"></i>
                        Informações do Sistema
                    </h6>
                </div>
                <div class="card-body">
                    <small class="text-muted">
                        <strong>ID:</strong> @Model.Veiculo.Id<br>
                        <strong>Categoria:</strong> @Model.Veiculo.Categoria.ToString()<br>
                        <strong>Status:</strong> @Model.Veiculo.Status.ToString()
                    </small>
                </div>
            </div>

        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            // Tooltips
            $('[title]').tooltip();

            // Confirmar ações
            $('a[href*="/Delete"]').on('click', function(e) {
                if (!confirm('Tem certeza que deseja remover este veículo?')) {
                    e.preventDefault();
                }
            });
        });
    </script>
}