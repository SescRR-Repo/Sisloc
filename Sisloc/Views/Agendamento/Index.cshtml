@model Sisloc.Models.Agendamento

@{
    ViewData["Title"] = "Novo Agendamento";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-lg-8">

            <!-- Header -->
            <div class="text-center mb-4">
                <h2 class="fw-bold text-primary">
                    <i class="fas fa-calendar-plus me-2"></i>
                    Novo Agendamento de Veículo
                </h2>
                <p class="text-muted">Preencha os dados abaixo para solicitar um veículo</p>
            </div>

            <!-- Formulário -->
            <div class="card shadow-sm">
                <div class="card-body p-4">
                    <form asp-action="Create" method="post" id="agendamentoForm">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                        <!-- Dados da Viagem -->
                        <div class="row mb-4">
                            <div class="col-12">
                                <h5 class="border-bottom pb-2 mb-3">
                                    <i class="fas fa-route me-2 text-primary"></i>
                                    Dados da Viagem
                                </h5>
                            </div>
                        </div>

                        <!-- Data e Hora -->
                        <div class="row mb-3">
                            <div class="col-md-6">
                                <label asp-for="DataPartida" class="form-label required"></label>
                                <input asp-for="DataPartida" class="form-control" type="datetime-local" />
                                <span asp-validation-for="DataPartida" class="text-danger"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="DataChegada" class="form-label required"></label>
                                <input asp-for="DataChegada" class="form-control" type="datetime-local" />
                                <span asp-validation-for="DataChegada" class="text-danger"></span>
                            </div>
                        </div>

                        <!-- Destino -->
                        <div class="row mb-3">
                            <div class="col-12">
                                <label asp-for="Destino" class="form-label required"></label>
                                <input asp-for="Destino" class="form-control" placeholder="Ex: Centro da cidade, Aeroporto, etc." />
                                <span asp-validation-for="Destino" class="text-danger"></span>
                            </div>
                        </div>

                        <!-- Descrição -->
                        <div class="row mb-4">
                            <div class="col-12">
                                <label asp-for="Descricao" class="form-label"></label>
                                <textarea asp-for="Descricao" class="form-control" rows="3"
                                          placeholder="Descreva o objetivo da viagem (opcional)"></textarea>
                                <span asp-validation-for="Descricao" class="text-danger"></span>
                            </div>
                        </div>

                        <!-- Dados do Solicitante -->
                        <div class="row mb-4">
                            <div class="col-12">
                                <h5 class="border-bottom pb-2 mb-3">
                                    <i class="fas fa-user me-2 text-primary"></i>
                                    Dados do Solicitante
                                </h5>
                            </div>
                        </div>

                        <!-- Nome e Quantidade -->
                        <div class="row mb-3">
                            <div class="col-md-8">
                                <label asp-for="NomeSolicitante" class="form-label required"></label>
                                <input asp-for="NomeSolicitante" class="form-control" placeholder="Nome completo" />
                                <span asp-validation-for="NomeSolicitante" class="text-danger"></span>
                            </div>
                            <div class="col-md-4">
                                <label asp-for="QuantidadePessoas" class="form-label required"></label>
                                <input asp-for="QuantidadePessoas" class="form-control" type="number" min="1" max="50" />
                                <span asp-validation-for="QuantidadePessoas" class="text-danger"></span>
                            </div>
                        </div>

                        <!-- Dados do Veículo -->
                        <div class="row mb-4">
                            <div class="col-12">
                                <h5 class="border-bottom pb-2 mb-3">
                                    <i class="fas fa-car me-2 text-primary"></i>
                                    Especificações do Veículo
                                </h5>
                            </div>
                        </div>

                        <!-- Categoria e Motorista -->
                        <div class="row mb-3">
                            <div class="col-md-8">
                                <label asp-for="CategoriaVeiculo" class="form-label required"></label>
                                <select asp-for="CategoriaVeiculo" class="form-select" asp-items="ViewBag.CategoriasVeiculo">
                                    <option value="">Selecione a categoria do veículo</option>
                                </select>
                                <span asp-validation-for="CategoriaVeiculo" class="text-danger"></span>
                            </div>
                            <div class="col-md-4">
                                <label class="form-label">&nbsp;</label>
                                <div class="form-check mt-2">
                                    <input asp-for="PrecisaMotorista" class="form-check-input" type="checkbox" checked />
                                    <label asp-for="PrecisaMotorista" class="form-check-label">
                                        Precisa de motorista
                                    </label>
                                </div>
                            </div>
                        </div>

                        <!-- Informações sobre categorias -->
                        <div class="row mb-4">
                            <div class="col-12">
                                <div class="alert alert-info">
                                    <h6><i class="fas fa-info-circle me-2"></i>Informações sobre as categorias:</h6>
                                    <div class="row small">
                                        <div class="col-md-6">
                                            <strong>Hatch:</strong> Ideal para cidade (até 5 pessoas)<br>
                                            <strong>Sedan:</strong> Conforto e elegância (até 5 pessoas)<br>
                                            <strong>Caminhonete:</strong> Versatilidade (até 5 pessoas + carga)
                                        </div>
                                        <div class="col-md-6">
                                            <strong>Pickup:</strong> Robustez e capacidade (até 5 pessoas)<br>
                                            <strong>Caminhão:</strong> Transporte de carga (1-3 pessoas)
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Botões -->
                        <div class="row">
                            <div class="col-12">
                                <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                                    <a asp-controller="Home" asp-action="Index" class="btn btn-outline-secondary">
                                        <i class="fas fa-arrow-left me-2"></i>Voltar
                                    </a>
                                    <button type="submit" class="btn btn-primary btn-lg px-4">
                                        <i class="fas fa-paper-plane me-2"></i>Solicitar Agendamento
                                    </button>
                                </div>
                            </div>
                        </div>

                    </form>
                </div>
            </div>

            <!-- Dicas -->
            <div class="row mt-4">
                <div class="col-12">
                    <div class="card border-warning">
                        <div class="card-body">
                            <h6 class="card-title text-warning">
                                <i class="fas fa-lightbulb me-2"></i>Dicas Importantes
                            </h6>
                            <ul class="mb-0 small">
                                <li>Agendamentos devem ser feitos com pelo menos 24h de antecedência</li>
                                <li>Verifique a disponibilidade de veículos para sua categoria</li>
                                <li>Mantenha seu protocolo para consultas futuras</li>
                                <li>Em caso de alterações, entre em contato com a administração</li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        $(document).ready(function() {
            // Função para obter data/hora local formatada para datetime-local
            function getLocalDateTime(offsetMinutes = 0) {
                var now = new Date();
                now.setMinutes(now.getMinutes() + offsetMinutes);

                // Formatação para datetime-local (YYYY-MM-DDTHH:MM)
                var year = now.getFullYear();
                var month = String(now.getMonth() + 1).padStart(2, '0');
                var day = String(now.getDate()).padStart(2, '0');
                var hours = String(now.getHours()).padStart(2, '0');
                var minutes = String(now.getMinutes()).padStart(2, '0');

                return `${year}-${month}-${day}T${hours}:${minutes}`;
            }

            // Definir valores padrão usando horário local
            var $dataPartida = $('#DataPartida');
            var $dataChegada = $('#DataChegada');

            // Se os campos estão vazios, definir valores padrão
            if (!$dataPartida.val()) {
                // Amanhã às 8:00 (ou próxima hora se já passou)
                var amanha = new Date();
                amanha.setDate(amanha.getDate() + 1);
                amanha.setHours(8, 0, 0, 0);

                // Se amanhã 8h já passou, usar horário atual + 2 horas
                var agora = new Date();
                if (amanha <= agora) {
                    amanha = new Date(agora.getTime() + (2 * 60 * 60 * 1000)); // +2 horas
                }

                $dataPartida.val(getLocalDateTime((amanha.getTime() - agora.getTime()) / 60000));
            }

            if (!$dataChegada.val()) {
                // 4 horas após a partida
                var partida = new Date($dataPartida.val());
                partida.setHours(partida.getHours() + 4);
                $dataChegada.val(getLocalDateTime((partida.getTime() - new Date().getTime()) / 60000));
            }

            // Definir data mínima como agora (horário local)
            var agora = getLocalDateTime(1); // 1 minuto no futuro
            $dataPartida.attr('min', agora);
            $dataChegada.attr('min', agora);

            // Validação em tempo real
            function validarHorarios() {
                var partida = new Date($dataPartida.val());
                var chegada = new Date($dataChegada.val());
                var agora = new Date();

                // Limpar mensagens anteriores
                $('.field-validation-error').hide();

                if (partida <= agora) {
                    $dataPartida.addClass('is-invalid');
                    return false;
                } else {
                    $dataPartida.removeClass('is-invalid');
                }

                if (chegada <= partida) {
                    $dataChegada.addClass('is-invalid');
                    return false;
                } else {
                    $dataChegada.removeClass('is-invalid');
                }

                return true;
            }

            $dataPartida.on('change', function() {
                validarHorarios();
                // Atualizar data mínima de chegada
                $dataChegada.attr('min', $(this).val());
            });

            $dataChegada.on('change', validarHorarios);

            // Confirmar antes de enviar
            $('#agendamentoForm').on('submit', function(e) {
                if (!validarHorarios()) {
                    e.preventDefault();
                    alert('Por favor, verifique as datas e horários informados.');
                    return false;
                }

                var confirmacao = confirm('Confirma o envio da solicitação de agendamento?');
                if (!confirmacao) {
                    e.preventDefault();
                    return false;
                }

                // Mostrar loading
                var $submitBtn = $(this).find('button[type="submit"]');
                var originalText = $submitBtn.html();
                $submitBtn.html('<i class="fas fa-spinner fa-spin me-2"></i>Enviando...');
                $submitBtn.prop('disabled', true);

                // Restaurar botão em caso de erro (backup)
                setTimeout(() => {
                    $submitBtn.html(originalText);
                    $submitBtn.prop('disabled', false);
                }, 10000);
            });
        });
    </script>
}